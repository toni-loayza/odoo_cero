<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_sale_customers_tree" model="ir.ui.view">
        <field name="name">delivery.sale.customers.tree</field>
        <field name="model">delivery.sale.customers</field>
        <field name="arch" type="xml">
            <tree string="Lista de clientes">
                <field name="name"/>
                <field name="document"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
    <record id="view_delivery_sale_customers_form" model="ir.ui.view">
        <field name="name">delivery.sale.customers.form</field>
        <field name="model">delivery.sale.customers</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="document"/>
                        </group>
                        <group>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Direcciones" id="address_customers">
                            <field name="address_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="address"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_delivery_sale_customers" model="ir.actions.act_window">
        <field name="name">Listado de clientes</field>
        <field name="res_model">delivery.sale.customers</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>